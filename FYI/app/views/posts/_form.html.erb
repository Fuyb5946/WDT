<%= form_for(@post) do |f| %>
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h4>
      <%= pluralize(@post.errors.count, "error:") %>
      <% @post.errors.full_messages.each do |message| %>
      <%= message %>
      </h4>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title , autofocus: true, class: "form-control" %>
  </div>
  <div class="field">
    <%= f.label :body %><br>
    <%= f.text_area :body, id: 'editor' , placeholder:"Text here..." , autofocus: true, class: "form-control" %>
    <br />
  </div>
  <div class="ui buttons">
    <%= link_to 'Back', posts_path, class: 'huge ui button' %>
    <div class="or" data-text="or"></div>
    <%= f.submit class: 'huge ui positive button' %>
  </div>
<% end %>
